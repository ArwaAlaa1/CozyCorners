                        <li class="shopping-cart"><a asp-action="GetCart" asp-route-id="@UserManager.GetUserId(User)" asp-controller="Cart" class="cart"><span><small>0</small><i class="fa-solid fa-cart-shopping"></i></span></a></li>

                    }else{
                        <li class="shopping-cart"><a asp-action="GetCart" asp-controller="Cart" class="cart"><span><small>0</small><i class="fa-solid fa-cart-shopping"></i></span></a></li>

                    }
                   
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa-solid fa-user"></i>
                        </a>
                        <ul class="dropdown-menu">
                            @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
                                </li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button type="submit" class="btn btn-link">LogOut</button>
                                    </form>
                                </li>
                            }
                            else if (User.IsInRole("Admin") && SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a id="manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
                                </li>
                                <li>
                                    <form asp-action="Index" asp-controller="Admin" method="get">
                                        <button type="submit" class="btn btn-link">Dashboard</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button type="submit" class="btn btn-link">LogOut</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <form asp-action="Register" asp-controller="Account" method="get">
                                        <button type="submit" class="btn btn-link">Register</button>
                                    </form>
                                </li>
                                <li>
                                    <form asp-action="Signin" asp-controller="Account" method="get">
                                        <button type="submit" class="btn btn-link">Login</button>
                                    </form>
                                </li>
                            }
                        </ul>
                    </li>
                  
                    </ul>
                
				</div>
			</div>

		</div>
	</nav>

	<aside id="fh5co-hero" class="js-fullheight">
		<div class="flexslider js-fullheight">
			<ul class="slides">
            @for (int i = 0; i < products.Count; i++)
            {
                var product = products[i];
                <li style="background-image: url(@product.PhotoPath);">
                    <div class="overlay-gradient"></div>
                    <div class="container">
                        <div class="col-md-6 col-md-offset-3 col-md-pull-3 js-fullheight slider-text">
                            <div class="slider-text-inner">
                                <div class="desc">
                                    <span class="price">$@product.Price</span>
                                    <h2>@product.Name</h2>
                                    <p>@product.Description</p>
                                    <p><a asp-action="AddCart" asp-controller="Cart" asp-route-ProductId="@product.Id" class="btn btn-primary btn-outline btn-lg">Purchase Now</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }

		
				
			</ul>
		</div>
	</aside>




